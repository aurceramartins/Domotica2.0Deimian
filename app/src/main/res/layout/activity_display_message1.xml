<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.domotica20.DisplayMessageActivity1"
    android:background="@drawable/treap">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textovuelta"
        android:layout_alignLeft="@+id/listo"
        android:layout_alignStart="@+id/listo"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="81dp"
        android:layout_height="127dp"
        android:id="@+id/listo"
        android:onClick="editarmensajeOnclick"
        android:background="@drawable/botonbob"
        android:layout_weight="7.45"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textoventanita" />

    <EditText
        android:layout_width="208dp"
        android:layout_height="133dp"
        android:id="@+id/textoventanita"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
