<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".D"
    android:background="@drawable/trippingespoco"
    style="@android:style/Animation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Luz"
                android:id="@+id/Luz"
                android:layout_weight="0.12"
                android:textStyle="bold"
                android:visibility="visible"
                android:textColor="#3bff29"
                android:width="100dp"
                android:typeface="serif"
                android:textSize="50dp"
                android:textColorHighlight="#ff1f39" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:text="On/Off"
                android:id="@+id/botonOnOff"
                android:layout_weight="0.12"
                android:onClick="EncenderOnClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Intensidad"
                android:id="@+id/intensidad"
                android:layout_weight="0.10"
                android:textColor="#2dff21"
                android:textSize="30dp"
                android:width="30dp"
                android:textStyle="bold" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_weight="0.10"
                android:progress="50"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:text="HOLA"
                android:id="@+id/edit_mensaje"
                android:layout_weight="0.56"
                android:textColor="#13ff09"
                android:textSize="50dp"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:layout_width="135dp"
                android:layout_height="111dp"
                android:id="@+id/cambiaventana"
                android:nestedScrollingEnabled="false"
                android:onClick="VentanaMovimiento"
                android:background="@drawable/botondiseno"
                android:layout_weight="0.62" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:weightSum="1">

            <TextView
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:id="@+id/textovuelta"
                android:textSize="50dp"
                android:width="200dp"
                android:textColor="#22fff8" />

            <Button
                android:layout_width="200dp"
                android:layout_height="145dp"
                android:id="@+id/forResult"
                android:onClick="forResultOnclick"
                android:background="@drawable/botonbinario"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="55dp"
                android:layout_marginEnd="55dp"
                android:layout_gravity="bottom" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
